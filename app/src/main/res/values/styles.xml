<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/black_effective</item>

    </style>

    <style name="TransparentDialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
    </style>

    <style name="CustomProgress">
        <item name="colorAccent">@color/orange_three</item>
    </style>

    <style name="RoundMenuItem">
        <item name="android:background">?actionBarItemBackground</item>
    </style>

    <style name="MainToolbar.LeftMenu" parent="RoundMenuItem">
        <item name="android:layout_width">@dimen/_35sdp</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>

    <style name="ScreenTitle">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:freezesText">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColorHint">@color/text_color_77</item>
        <item name="android:textColor">@color/text_color_42</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="TextViewStyle.margin">
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
    </style>

    <style name="TextViewStyle.Big">
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="TextViewStyle.gray">
        <item name="android:textColor">@color/grey_three</item>
    </style>

    <style name="TextViewStyle.Bold">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewStyle.Title">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewStyle.Title2">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewStyle.Bold.End">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="TextViewStyle.Bold.Right">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="TextViewStyle.Size">
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewStyle.Vnd">
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/_6sdp</item>
    </style>


    <style name="TextViewStyle.Bold.margin">
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ViewLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/bg_color</item>
    </style>

    <style name="ViewLine.margin">
        <item name="android:layout_margin">@dimen/_10sdp</item>
    </style>

    <style name="ViewLine.normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_6sdp</item>
        <item name="android:background">@color/bg_color</item>
    </style>

    <style name="ViewLine.big">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_8sdp</item>
        <item name="android:background">@color/bg_color</item>
    </style>

    <style name="ViewLine.dim">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grey_three_trans</item>
    </style>

    <style name="LayoutEditText">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:paddingRight">@dimen/_8sdp</item>
        <item name="android:paddingLeft">@dimen/_8sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

</resources>
