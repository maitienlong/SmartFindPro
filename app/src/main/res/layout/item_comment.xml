<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp">

    <LinearLayout
        android:layout_marginTop="@dimen/_8sdp"
        android:id="@+id/ln_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/img_avt_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_8sdp"
            android:layout_weight="5"
            android:src="@mipmap/logo_app" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"

                android:backgroundTint="#dfe6e9"
                android:paddingLeft="@dimen/_8sdp"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_6sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_per_name"
                        style="@style/textStyleBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mai Tiến Long" />

                    <TextView
                        android:id="@+id/tv_content"
                        style="@style/textStyleRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Ôi phòng trọ nhà mình đẹp quá" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time"
                    style="@style/textStyleRegular_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="12 phút" />

                <TextView
                    android:id="@+id/btn_favorite"
                    style="@style/textStyleBold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Thích" />

                <TextView
                    android:id="@+id/btn_recomment"
                    style="@style/textStyleBold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Trả lời" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="right"
                    android:paddingRight="@dimen/_8sdp">

                    <TextView
                        android:id="@+id/tv_count_favorite"
                        style="@style/textStyleBold"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="100" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_star" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_recoment_view"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_recomment_count"
                    style="@style/textStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="4 " />

                <TextView

                    style="@style/textStyleBold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="người đã trả lời bình luận" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>