<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="presenter"
            type="com.poly.smartfindpro.ui.searchProduct.SearchProductPresenter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnAddBubble"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/fab_circle"
            android:text="1000+"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/listProductLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C6C6C6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.MainActivity">

                <LinearLayout
                    android:id="@+id/cardView3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:background="@drawable/background_app"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginBottom="1dp">

                        <ImageView
                            android:id="@+id/ic_address"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="16dp"
                            android:src="@drawable/ic_baseline_location_chung_cu" />

                        <TextView
                            android:id="@+id/tv_address"
                            style="@style/textStyleBold"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:gravity="center_vertical"
                            android:text="Hà Nội"
                            android:textColor="@color/white"

                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:layout_weight="1"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtSearch"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_circle_editext_while"
                                android:hint="@{presenter.hint}"
                                android:paddingLeft="@dimen/_8sdp"
                                android:paddingRight="@dimen/_8sdp"
                                android:singleLine="true"
                                android:text="@{presenter.textSearch}"
                                android:textColor="@color/black"
                                android:textColorHint="@color/gray2"
                                app:addTextChangedListener="@{presenter.changeColorButton()}" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <ImageView
                            android:id="@+id/imgSearch"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="3"
                            android:onClick="@{()-> presenter.onSearch()}"
                            android:padding="@dimen/_2sdp"
                            android:src="@mipmap/search_real"
                            android:tintMode="@color/white" />

                        <ImageView
                            android:id="@+id/type_filter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="3"
                            android:onClick="@{()-> presenter.onSelectTypeFilter()}"
                            android:padding="@dimen/_2sdp"
                            android:src="@drawable/ic_baseline_filter_alt_24"
                            app:tint="@color/white" />

                    </LinearLayout>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/cardView3"
                    android:layout_margin="@dimen/_8sdp"
                    app:cardCornerRadius="15sp">

                    <FrameLayout
                        android:id="@+id/fl_search"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                    </FrameLayout>


                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <include layout="@layout/fragment_list_product" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>