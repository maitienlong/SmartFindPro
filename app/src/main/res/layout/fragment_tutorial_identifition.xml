<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="presenter"
            type="com.poly.smartfindpro.ui.identification.tutorial.TutorialPresenter" />

        <import type="android.view.View" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.poly.smartfindpro.widget.CommonToolbar
            android:id="@+id/ctb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp" />

        <TextView
            style="@style/textStyleBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ctb"
            android:layout_marginTop="@dimen/_16sdp"
            android:gravity="center"
            android:text="Hướng dẫn" />

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_16sdp">

            <Button
                android:onClick="@{()-> presenter.onClickConfirm()}"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button"
                android:text="Tôi đã hiểu"
                android:textColor="@color/white" />
        </LinearLayout>

    </RelativeLayout>
</layout>