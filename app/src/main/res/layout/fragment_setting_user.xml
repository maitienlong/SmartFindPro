<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="presenter"
            type="com.poly.smartfindpro.ui.user.setting.SettingPresenter" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <com.poly.smartfindpro.widget.CommonToolbar
                android:id="@+id/cmtb"
                onBackClick="@{()->presenter.onBackClick()}"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp" />

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_10sdp">

                <TextView
                    android:paddingHorizontal="@dimen/_20sdp"

                    android:gravity="center"
                    android:id="@+id/tvInfor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/border_item_post"
                    android:onClick="@{()->presenter.onClickInformation()}"
                    android:text="@string/setting_infor_user"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp" />


                <TextView
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_20sdp"
                    android:id="@+id/tvChangePass"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/border_item_post"
                    android:onClick="@{()->presenter.onClickChangePassword()}"
                    android:text="@string/setting_change_pass"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_20sdp"
                    android:id="@+id/tvConfirmAccount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/border_item_post"
                    android:onClick="@{()->presenter.onClickConfirmAccount()}"
                    android:text="@string/setting_confirm_account"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp" />
                <TextView
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_20sdp"
                    android:id="@+id/tvPermission"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/border_item_post"
                    android:onClick="@{()->presenter.onClickPerMission()}"
                    android:text="@string/setting_permission"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp" />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
</layout>