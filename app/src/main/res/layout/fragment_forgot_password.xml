<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="presenter"
            type="com.poly.smartfindpro.ui.login.forgotPassword.ForgotPasswordPresenter" />

        <import type="android.view.View" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <com.poly.smartfindpro.widget.CommonToolbar
            android:id="@+id/cmtb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            app:onBackClick="@{()-> presenter.OnBackClick()}" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:gravity="center"
                android:text="Hãy điền thông tin để lấy lại mật khẩu của bạn"
                style="@style/textStyleAlert_12dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_otp"
                style="@style/LayoutEditText"
                android:layout_below="@id/tv_title"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="#dfe6e9"
                android:hint="Nhập 4 số cuối của CMND"
                app:counterEnabled="true"
                app:counterMaxLength="4">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_CMTND_Identity"
                    style="@style/EditText"
                    android:gravity="center"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_phone_number"
                style="@style/LayoutEditText"
                android:layout_below="@id/til_otp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="#dfe6e9"
                android:hint="Nhập số điện thoại"
                app:counterEnabled="true"
                app:counterMaxLength="10">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_Phone_Nummber"
                    style="@style/EditText"
                    android:gravity="center"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:onClick="@{()->presenter.onClickForgot()}"
                android:id="@+id/btn_Action"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_below="@id/til_phone_number"
                android:layout_marginTop="@dimen/_32sdp"
                android:background="@drawable/background_button"
                android:text="Tiếp tục"
                android:textColor="#fff" />

        </RelativeLayout>


    </LinearLayout>

</layout>