<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="presenter"
            type="com.poly.smartfindpro.ui.user.profile.ProfilePresenter" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_app_gray"
        android:clickable="true"
        android:focusable="true">

        <com.poly.smartfindpro.widget.CommonToolbar
            android:id="@+id/cmtb"
            onBackClick="@{()->presenter.onBackClick()}"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cmtb">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200sdp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/img_cover_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/bg_gradient_gray"

                                />

                            <LinearLayout

                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:background="@drawable/bg_dialog_button"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal"
                                android:paddingHorizontal="@dimen/_8sdp"
                                android:paddingVertical="@dimen/_5sdp">

                                <Button
                                    android:onClick="@{()-> presenter.onClickChangeCover()}"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/ic_baseline_camera_alt_24"

                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="Thêm ảnh bìa"
                                    android:textSize="@dimen/_10sdp"
                                    android:visibility="gone" />
                            </LinearLayout>

                        </RelativeLayout>


                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:background="@color/background_app_gray">

                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rl_avatar"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_80sdp"
                        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <com.github.siyamed.shapeimageview.CircularImageView
                            android:id="@+id/img_avatar_profile"
                            android:onClick="@{()->presenter.onClickImage()}"

                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:background="@drawable/border_image_avata"
                            android:src="@mipmap/imgplaceholder" />

                        <LinearLayout
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="-0dp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="@drawable/border_image_avata">

                            <Button
                                android:onClick="@{()-> presenter.onClickChangeAvatar()}"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:background="@drawable/ic_baseline_camera_alt_24" />
                        </LinearLayout>

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rl_avatar">

                        <TextView
                            android:id="@+id/textView10"
                            style="@style/textStyleBlue_15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:layout_weight="1"
                            android:text="@{presenter.nameInfor}"
                            app:layout_constraintTop_toTopOf="@+id/linearLayout2" />

                        <Button
                            android:id="@+id/btn_edit_name"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:background="@drawable/ic_baseline_edit_24"
                            android:onClick="@{()->presenter.onClickEditUser()}" />
                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/french_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp">


                    <Button
                        android:id="@+id/btn_approved"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/btn_category_pressed"
                        android:onClick="@{()->presenter.onClickApproved()}"
                        android:text="@string/btn_approved"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp">


                    </Button>


                    <Button
                        android:id="@+id/btn_pending"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/btn_category"
                        android:onClick="@{()->presenter.onClickPending()}"
                        android:text="@string/btn_pending"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_8sdp">

                    </Button>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="center"
                    android:text="@string/tv_status"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rc_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</layout>