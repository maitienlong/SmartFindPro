<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="confirm"
            type="com.poly.smartfindpro.ui.post.confirmPost.ConfirmPostFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="31dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidline_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4"/>

        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:text="@string/tv_confirm"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="@string/tv_category"
            app:layout_constraintTop_toBottomOf="@id/tvConfirm" />

        <TextView
            android:id="@+id/str_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="22dp"
            app:layout_constraintStart_toEndOf="@id/tvCategory"
            app:layout_constraintTop_toBottomOf="@id/tvConfirm" />

        <LinearLayout
            android:id="@+id/gridlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation=""
            app:layout_constraintTop_toBottomOf="@+id/tvCategory">

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@mipmap/bg_barcode" />

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@mipmap/bg_barcode" />

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@mipmap/bg_barcode" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_22sdp"
            android:text="@string/tv_amount_room"
            app:layout_constraintTop_toBottomOf="@+id/gridlayout" />

        <TextView
            android:id="@+id/str_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/_22sdp"

            app:layout_constraintStart_toEndOf="@+id/tvAmount"
            app:layout_constraintStart_toStartOf="@+id/guidline_confirm"
            app:layout_constraintTop_toBottomOf="@id/gridlayout" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="@string/tv_price"
            app:layout_constraintTop_toBottomOf="@+id/tvAmount" />

        <TextView
            android:id="@+id/str_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintStart_toEndOf="@+id/tvPrice"
            app:layout_constraintStart_toStartOf="@+id/guidline_confirm"
            app:layout_constraintTop_toBottomOf="@+id/str_amount" />

        <TextView
            android:id="@+id/tvDeposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="@string/tv_deposit"
            app:layout_constraintTop_toBottomOf="@id/tvPrice" />

        <TextView
            android:id="@+id/str_deposit"
            android:layout_width="28dp"
            android:layout_height="14dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintStart_toEndOf="@id/tvDeposit"
            app:layout_constraintStart_toStartOf="@+id/guidline_confirm"
            app:layout_constraintTop_toBottomOf="@id/str_price" />

        <TextView
            android:id="@+id/tvGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="@string/tv_gender"
            app:layout_constraintTop_toBottomOf="@id/tvDeposit" />

        <TextView
            android:id="@+id/str_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintStart_toEndOf="@+id/tvGender"
            app:layout_constraintStart_toStartOf="@+id/guidline_confirm"
            app:layout_constraintTop_toBottomOf="@+id/str_deposit" />


        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="@string/tv_address"
            app:layout_constraintTop_toBottomOf="@+id/tvGender" />

        <TextView
            android:id="@+id/str_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintStart_toEndOf="@+id/tvAddress"
            app:layout_constraintStart_toStartOf="@+id/guidline_confirm"
            app:layout_constraintTop_toBottomOf="@id/str_gender" />

        <TextView
            android:id="@+id/tvElectricBill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="@string/tv_electricity_bill"
            app:layout_constraintTop_toBottomOf="@id/tvAddress" />

        <TextView
            android:id="@+id/str_electricbill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintStart_toEndOf="@+id/tvElectricBill"
            app:layout_constraintStart_toStartOf="@+id/guidline_confirm"
            app:layout_constraintTop_toBottomOf="@+id/str_address" />


        <TextView
            android:id="@+id/tvWaterBill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="@string/tv_water_bill"
            app:layout_constraintTop_toBottomOf="@+id/tvElectricBill" />

        <TextView
            android:id="@+id/str_waterbill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintStart_toEndOf="@+id/tvWaterBill"
            app:layout_constraintStart_toStartOf="@+id/guidline_confirm"
            app:layout_constraintTop_toBottomOf="@+id/str_electricbill" />


        <TextView
            android:id="@+id/tvUtilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="@string/tv_utilities"
            app:layout_constraintTop_toBottomOf="@+id/tvWaterBill" />

        <TextView
            android:id="@+id/str_utilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintStart_toEndOf="@+id/tvUtilities"
            app:layout_constraintStart_toStartOf="@+id/guidline_confirm"
            app:layout_constraintTop_toBottomOf="@+id/str_waterbill"
            android:maxEms="10"/>

        <TextView
            android:id="@+id/tvDescriptionDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="@string/tv_detailed_description"
            app:layout_constraintTop_toBottomOf="@+id/str_utilities" />

        <TextView
            android:id="@+id/str_descriptiondetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintStart_toEndOf="@+id/tvDescriptionDetail"
            app:layout_constraintStart_toStartOf="@+id/guidline_confirm"
            app:layout_constraintTop_toBottomOf="@+id/str_utilities" />

        <Button
            android:id="@+id/btnPostToServer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:background="@drawable/bg_blue_round_15_selector"
            android:text="@string/btn_post"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDescriptionDetail" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>